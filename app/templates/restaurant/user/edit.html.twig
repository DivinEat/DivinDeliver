{% extends 'base_restaurant.html.twig' %}

{% block title %}{% trans with {'%user_firstname%': user.firstname, '%user_lastname%': user.lastname} %}user.edit{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans with {'%user_firstname%': user.firstname, '%user_lastname%': user.lastname} %}user.edit{% endtrans %}</h1>

    {{ form_start(form, {'attr': {'class': 'w-100'}}) }}
        {{ form_errors(form) }}

        {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.roles, {'attr': {'class': 'form-control browser-default'}}) }}
        
        <br>
        <div class="d-flex align-items-center justify-content-between">
            <a href="{{ path('restaurant_user_index') }}" class="text-dark mt-3">
                <span class="mr-2"><img class="icon rotate-180" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}"></span>
                Retour
            </a>
            <div>
                <span class="mr-1"><img class="icon" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}"></span>
                <input type="submit" class="dd-bt-edit" value="Editer">
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}