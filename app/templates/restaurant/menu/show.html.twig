{% extends 'base_restaurant.html.twig' %}

{% block title %}DivinDeliver | {% trans %}menu.word{% endtrans %} {{ menu.title }}{% endblock %}

{% block body %}
    <div class="w-100">
        <div class="w-50 flex justify-center wrap m-auto">
            <img src="{{ vich_uploader_asset(menu, 'imageFile') }}" class="thumbnail" alt="{{ menu.title }}"/> <br>
            <table class="table mt-1">
                <tbody>
                    <tr>
                        <th>{% trans %}menu.word{% endtrans %}</th>
                        <td>{{ menu.title }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}menu.title{% endtrans %}</th>
                        <td>{{ menu.title }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}category.word{% endtrans %}</th>
                        <td>
                            {% for category in menu.categories %}
                                {{ category.title }}
                            {% endfor %}
                        </td>
                    </tr>
                </tbody>
            </table><br>
        </div>

        <br>
        <div class="d-flex align-items-center justify-content-between">
            <a href="{{ path('restaurant_menu_index') }}" class="btn btn-primary btn-back mt-3 p-auto">
                <span class="m-2"><img class="icon rotate-180" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}"></span>
                {% trans %}back{% endtrans %}
            </a>    
            <a href="{{ path('restaurant_menu_edit', {id: menu.id}) }}" class="btn btn-primary btn-edit mt-3 p-auto">
                {% trans %}edit{% endtrans %}
                <span class="m-2"><img class="icon" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}"></span>
            </a>
        </div>
    </div>
{% endblock %}