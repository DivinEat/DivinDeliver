<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}DivinDeliver{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    
    <body>
        <header class="d-flex align-items-center justify-content-between header-back header-back-p10">
            <div class="d-flex align-items-center flex-row ml-5">
                <a href="{{ path('default_index') }}"><img src="{{ asset('images/logo.png') }}" style="height: 125px"></a>
            </div>

            <div class="mr-5">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="text-dark">{% trans %}logout{% endtrans %} Admin</a>
                <span><img class="icon" src="{{ asset('images/icons/icon-admin-hack.png') }}"> </span>
            {% endif %}
            </div>
        </header>

        <div class="row">
            <div class="col-3 sidenav">
                <ul class="mt-2 d-flex flex-column align-items-center">
                    <li class="w-100 pl-2 pr-2 mt-4">
                        <a href="{{ path('default_index') }}" class="w-100 d-flex flex-row align-items-center t-d-none">
                            <img class="icon rotate-180" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}">
                            <span class="ml-3">{% trans %}nav.back_home{% endtrans %}</span>
                        </a>
                    </li>
                    <div class="ligne"></div>

                    <li class="w-100 pl-2 pr-2 mt-2">
                        <a class="t-d-none" href="{{ path('back_profile_index') }}" class="w-100 d-flex flex-row align-items-center t-d-none">
                            <img class="icon" src="{{ asset('images/icons/icon admin mobile-hack.png') }}">
                            <span class="ml-3">{% trans %}nav.profile{% endtrans %}</span>
                        </a>
                    </li>

                    <li class="w-100 pl-2 pr-2" style="margin-top: 5rem">
                        <a href="{{ path('admin_default_index') }}" class="w-100 d-flex flex-row justify-content-between align-items-center t-d-none">
                            <span>Dashboard</span>
                            <img class="icon" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}">
                        </a>
                    </li>
                    <div class="ligne"></div>

                    <li class="w-100 pl-2 pr-2">
                        <a href="{{ path('admin_user_index') }}" class="w-100 d-flex flex-row justify-content-between align-items-center t-d-none">
                            <span>{% trans %}nav.users{% endtrans %}</span>
                            <img class="icon" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}">
                        </a>
                    </li>
                    <div class="ligne"></div>

                    <li class="w-100 pl-2 pr-2">
                        <a href="{{ path('admin_store_index') }}" class="w-100 d-flex flex-row justify-content-between align-items-center t-d-none">
                            <span>{% trans %}nav.restaurants{% endtrans %}</span>
                            <img class="icon" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}">
                        </a>
                    </li>
                </ul>
            </div>

            <div class="col-9">
                {% for label, messages in app.flashes() %}                    
                    {% for message in messages %}
                        <div class="alert {{"alert-#{label}"}}">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                
                <div class="container mt-5 d-flex flex-column align-items-center">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        <footer class="d-flex justify-content-end">
        </footer>
        
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        <script>
            document.addEventListener('DOMContentLoaded', function() {                
                {% for label, messages in app.flashes() %}                    
                    {% for message in messages %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            });	  
        </script>
    </body>
</html>
