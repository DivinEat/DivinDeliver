{% extends 'base_admin.html.twig' %}

{% block title %}{{ store.name }}{% endblock %}

{% block body %}
    <h1>{% trans %}restaurant{% endtrans %} : {{ store.name }}</h1>

    {{ form_start(form, {'attr': {'class': 'w-100'}}) }}
        {{ form_errors(form) }}

        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.storeIdFakeUberEat, {'attr': {'class': 'form-control'}}) }}
        
        <br>
        <div class="d-flex align-items-center justify-content-between">
            <a href="{{ path('admin_store_index') }}" class="text-dark mt-3">
                <span class="mr-2"><img class="icon rotate-180" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}"></span>
                {% trans %}back{% endtrans %}
            </a>
            <div>
                <span class="mr-1"><img class="icon" src="{{ asset('images/icons/icon-fleche-r-hack.png') }}"></span>
                <input type="submit" class="dd-bt-edit" value="{% trans %}edit{% endtrans %}">
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}