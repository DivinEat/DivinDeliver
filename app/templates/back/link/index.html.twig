{% extends 'base_back.html.twig' %}

{% block title %}Liste des applications{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.appName, { 'attr': {'class': 'browser-default'} }) }}
    {{ form_row(form.clientId) }}
    {{ form_row(form.clientSecret) }}
    <input type="submit" value="CrÃ©er">
    {{ form_end(form) }}

    {% for app in apps %}
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{ app.appName }}</span>
                        <p>I am a very simple card. I am good at containing small bits of information.
                            I am convenient because I require little markup to use effectively.</p>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('admin_link_sync', {id: app.id}) }}">Sync</a>
                        <a href="#">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
