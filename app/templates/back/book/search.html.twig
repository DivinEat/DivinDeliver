{% extends 'base_back.html.twig' %}

{% block title %}Recherche de libre{% endblock %}

{% block body %}
    <h1 class="title">Recherche de livre</h1>

    <div class="row">
        {% for book in books %}
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        Name : {{ book.name }} <br>
                        Average Price : {{ book.averagePrice }} <br>
                        Tags : {% for tag in book.tags %}{{ tag.name }} - {% endfor %}
                    </div>
                    <div class="card-action">
                        <a href="{{ path('admin_book_show', {id: book.id}) }}">Voir</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
