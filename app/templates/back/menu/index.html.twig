{% extends 'base_back.html.twig' %}

{% block title %}Liste des menus{% endblock %}

{% block body %}
    <h1 class="title">Liste des menus</h1>
    
    <a href="{{ path('admin_menu_new') }}" href="#!" class="btn-floating btn-large scale-transition">
        <i class="material-icons">add</i>
    </a>

    <div class="col s12 m12 l6 offset-l2 center">
        <table cellpadding="1" cellspacing="1" class="table table-hover" id="table">
            <thead>
                <tr>
                    <th>Menu</th>
                    <th>Entr√©e</th>
                    <th>Plat</th>
                    <th>Dessert</th>
                    <th>Boisson</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for menu in menus %}
                    <tr>
                        <td>{{ menu.name }}</td>
                        <td>{{ menu.entree ? menu.entree.name : "" }}</td>
                        <td>{{ menu.main.name }}</td>
                        <td>{{ menu.dessert ? menu.dessert.name : ""}}</td>
                        <td>{{ menu.drink.name }}</td>
                        <td>
                            <a href="{{ path('admin_menu_show', {id: menu.id}) }}" class="dd-btn dd-btn-primary">Voir</a>
                            <a href="{{ path('admin_menu_edit', {id: menu.id}) }}" class="dd-btn dd-btn-edit">Editer</a>
                            <a href="{{ path('admin_menu_delete', {id: menu.id, token: csrf_token('delete_menu' ~ menu.name)}) }}" class="dd-btn dd-btn-remove">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
