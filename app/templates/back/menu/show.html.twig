{% extends 'base_back.html.twig' %}

{% block title %}Menu {{ menu.title }}{% endblock %}

{% block body %}
    <a href="{{ path('admin_menu_edit', {id: menu.id}) }}" class="dd-btn dd-btn-edit">{% trans %}button.edit{% endtrans %}</a> <br>
    <br>
    Menu : {{ menu.title }} <br>
    {% trans %}item.title{% endtrans %} : {{ menu.title }} <br>
    Categories :
    {% for category in menu.categories %}
        {{ category.title }}
    {% endfor %}
    <br>
    <a href="{{ path('admin_menu_index') }}" class="dd-btn dd-btn-default">{% trans %}menu.back{% endtrans %}</a>
{% endblock %}