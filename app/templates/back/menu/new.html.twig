{% extends 'base_back.html.twig' %}

{% block title %}{% trans %}menu.new{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}menu.new{% endtrans %}</h1>

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.entree, { 'attr': {'class': 'browser-default'} }) }}
        {{ form_row(form.main, { 'attr': {'class': 'browser-default'} }) }}
        {{ form_row(form.dessert, { 'attr': {'class': 'browser-default'} }) }}
        {{ form_row(form.drink, { 'attr': {'class': 'browser-default'} }) }}
        <input type="submit" class="btn green" value="{% trans %}button.create{% endtrans %}">
    {{ form_end(form) }}
{% endblock %}