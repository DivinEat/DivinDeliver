{% extends 'base_back.html.twig' %}

{% block title %}Création d'un nouveau menu{% endblock %}

{% block body %}
    <h1>Création d'un nouveau menu</h1>

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.entree, { 'attr': {'class': 'browser-default'} }) }}
        {{ form_row(form.main, { 'attr': {'class': 'browser-default'} }) }}
        {{ form_row(form.dessert, { 'attr': {'class': 'browser-default'} }) }}
        {{ form_row(form.drink, { 'attr': {'class': 'browser-default'} }) }}
        <input type="submit" value="Créer">
    {{ form_end(form) }}
{% endblock %}