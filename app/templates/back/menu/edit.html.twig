{% extends 'base_back.html.twig' %}

{% block title %}{% trans with {'%menu_name%': menu.name} %}menu.edit{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans with {'%menu_name%': menu.name} %}menu.edit{% endtrans %}</h1>

    {{ form_start(form) }}
        {{ form_errors(form) }}
        
        {{ form_row(form.name) }}
        {{ form_row(form.entree, { 'attr': {'class': 'browser-default'} }) }}
        {{ form_row(form.main, { 'attr': {'class': 'browser-default'} }) }}
        {{ form_row(form.dessert, { 'attr': {'class': 'browser-default'} }) }}
        {{ form_row(form.drink, { 'attr': {'class': 'browser-default'} }) }}
        <br>
        <input type="submit" value="{% trans %}button.update{% endtrans %}" class="dd-btn dd-btn-edit">
    {{ form_end(form) }}
{% endblock %}