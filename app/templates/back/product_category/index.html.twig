{% extends 'base_back.html.twig' %}

{% block title %}{% trans %}product.list{% endtrans %}{% endblock %}

{% block body %}
    <h1 class="title">{% trans %}product.list{% endtrans %}</h1>
    
    <a href="{{ path('admin_productcategory_new') }}" href="#!" class="dd-btn dd-btn-add">Ajouter</a>
    </a>

    <div class="col s12 m12 l6 offset-l2 center">
        <table cellpadding="1" cellspacing="1" class="admin-table">
            <thead>
                <tr>
                    <th>{% trans %}name{% endtrans %}</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for productCategory in productCategories %}
                    <tr>
                        <td>{{ productCategory.name }}</td>
                        <td>
                            <a href="{{ path('admin_productcategory_show', {id: productCategory.id}) }}" class="dd-btn dd-btn-primary">{% trans %}button.see{% endtrans %}</a>
                            <a href="{{ path('admin_productcategory_edit', {id: productCategory.id}) }}" class="dd-btn dd-btn-edit">{% trans %}button.edit{% endtrans %}</a>
                            <a href="{{ path('admin_productcategory_delete', {id: productCategory.id, token: csrf_token('delete_productcategory' ~ productCategory.name)}) }}" class="dd-btn dd-btn-remove">{% trans %}button.delete{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
