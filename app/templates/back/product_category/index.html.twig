{% extends 'base_back.html.twig' %}

{% block title %}Liste des catégories de produits{% endblock %}

{% block body %}
    <h1 class="title">Liste des catégories de produits</h1>

    <a href="{{ path('admin_productcategory_new') }}" class="btn">Création d'une nouvelle catégorie de produit</a>

    <div class="row">
        {% for productCategory in productCategories %}
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        Name : {{ productCategory.name }} <br>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('admin_productcategory_show', {id: productCategory.id}) }}">Voir</a>
                        <a href="{{ path('admin_productcategory_edit', {id: productCategory.id}) }}">Editer</a>
                        <a href="{{ path('admin_productcategory_delete', {id: productCategory.id, token: csrf_token('delete_productcategory' ~ productCategory.name)}) }}" class="red-text">Supprimer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
