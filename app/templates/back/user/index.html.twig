{% extends 'base_back.html.twig' %}

{% block title %}Liste des users{% endblock %}

{% block body %}
    <h1 class="title">Liste des users</h1>

    <a href="{{ path('admin_user_new') }}" class="btn">Cr√©ation d'un nouveau user</a>

    <div class="row">
        {% for user in users %}
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        Id : {{ user.id }} <br>
                        Email : {{ user.email }} <br>
                        Roles : {{ user.roles ? user.roles|json_encode : '' }} <br>
                        Password : {{ user.password }} <br>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('admin_user_show', {id: user.id}) }}">Voir</a>
                        <a href="{{ path('admin_user_edit', {id: user.id}) }}">Editer</a>
                        <a href="{{ path('admin_user_delete', {id: user.id, token: csrf_token('delete_user' ~ user.id)}) }}" class="red-text">Supprimer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
