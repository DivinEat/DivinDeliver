{% extends 'base_back.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h1 class="title">Liste des produits</h1>

    <a href="{{ path('admin_product_new') }}" class="btn">Cr√©ation d'un nouveau produit</a>

    <div class="row">
        {% for product in products %}
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        Category : {{ product.category }} <br>
                        Name : {{ product.name }} <br>
                        Description : {{ product.description }} <br>
                        Price : {{ product.price }} <br>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('admin_product_show', {id: product.id}) }}">Voir</a>
                        <a href="{{ path('admin_product_edit', {id: product.id}) }}">Editer</a>
                        <a href="{{ path('admin_product_delete', {id: product.id, token: csrf_token('delete_product' ~ product.name)}) }}" class="red-text">Supprimer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
