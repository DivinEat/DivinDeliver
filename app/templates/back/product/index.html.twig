{% extends 'base_back.html.twig' %}

{% block title %}{% trans %}product.list{% endtrans %}{% endblock %}

{% block body %}
    <h1 class="title">{% trans %}product.list{% endtrans %}</h1>
    {% if is_granted('ROLE_RESTAURATEUR') %}
        <a href="{{ path('admin_product_new') }}"
            class="dd-btn dd-btn-add">{% trans %}button.add{% endtrans %}
        </a>
    {% endif %}

    <div class="col s12 m12 l6 offset-l2 center">
        <table cellpadding="1" cellspacing="1" class="admin-table">
            <thead>
                <tr>
                    <th>{% trans %}category.word{% endtrans %}</th>
                    <th>{% trans %}name{% endtrans %}</th>
                    <th>Description</th>
                    <th>{% trans %}price{% endtrans %}</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.productCategory.name }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.price }}</td>
                        <td>
                            <a href="{{ path('admin_product_show', {id: product.id}) }}" 
                                class="dd-btn dd-btn-primary">{% trans %}button.see{% endtrans %}
                            </a>
                            {% if is_granted('ROLE_RESTAURATEUR') %}
                                <a href="{{ path('admin_product_edit', {id: product.id}) }}" 
                                    class="dd-btn dd-btn-edit">{% trans %}button.edit{% endtrans %}
                                </a>
                                <a href="{{ path('admin_product_delete', {id: product.id, token: csrf_token('delete_product' ~ product.name)}) }}" 
                                    class="dd-btn dd-btn-remove">{% trans %}button.delete{% endtrans %}
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
