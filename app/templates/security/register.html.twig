{% extends 'base_front.html.twig' %}

{% block title %}DivinDeliver | {% trans %}user.register{% endtrans %}{% endblock %}

{% block body %}
    <div class="row d-flex align-items-center justify-content-center">
        <div class="card pt-5 pb-5 mb-5">
            {{ form_start(form, { 'attr': {'class': 'admin-form'} }) }}
                <h2 class="title margin-0 text-align-center mb-5">{% trans %}user.register{% endtrans %}</h2>

                {{ form_row(form.firstname, {'attr': {'class': 'form-control form-control-user form-input'}}) }}
                {{ form_row(form.lastname, {'attr': {'class': 'form-control form-control-user form-input'}}) }}
                {{ form_row(form.email, {'attr': {'class': 'form-control form-control-user form-input'}}) }}

                <h2 class="title text-align-center mt-5">{% trans %}store.create{% endtrans %}</h2>
                {{ form_widget(form.stores) }}
                
                <button type="submit" class="dd-btn dd-btn-account dd-btn-account-blue margin-top-50">
                    {% trans %}user.register{% endtrans %}
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}