{% extends 'base_front.html.twig' %}

{% block title %}DivinDeliver | {% trans %}user.register{% endtrans %}{% endblock %}

{% block body %}
    <div class="card pt-5 pb-5">

        {{ form_start(form, { 'attr': {'class': 'admin-form'} }) }}

            <h2 class="title margin-0 text-align-center">{% trans %}user.register{% endtrans %}</h2>
            {{ form_row(form.email, {'attr': {'class': 'form-control form-control-user'}}) }}
            {{ form_row(form.password) }}

            <h2 class="title text-align-center">{% trans %}store.create{% endtrans %}</h2>
            {{ form_widget(form.stores) }}
            
            <button type="submit" class="dd-btn dd-btn-account dd-btn-account-blue margin-top-50">
                {% trans %}user.register{% endtrans %}
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}