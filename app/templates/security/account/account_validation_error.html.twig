{% extends 'base_front.html.twig' %}

{% block title %}DivinDeliver | {% trans %}account.validation.failed_title{% endtrans %}{% endblock %}

{% block body %}
    <div class="row d-flex align-items-center justify-content-center">
        <div class="card pt-5 pb-5 mb-5">
            <div class="admin-form mt-5">
                <h2 class="title margin-0 text-align-center mb-5">
                    {% trans %}account.validation.failed_title{% endtrans %}
                </h2>
                
                <p class="d-flex justify-content-center">{{ validation['message'] }}</p>

                {% if validation['code'] == 'account_already_valid' %}
                    <a href="{{ path('forgot_password') }}" class="dd-btn dd-btn-account dd-btn-account-blue mt-5">
                        {% trans %}password.forgot_password{% endtrans %}
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}